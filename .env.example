# ETC明細システム環境変数設定

# =============================================================================
# データベース設定
# =============================================================================
# データベースドライバー (gorm, mysql, postgres)
DB_DRIVER=gorm
# データベースホスト
DB_HOST=localhost
# データベースポート
DB_PORT=3306
# データベース名
DB_NAME=etc_meisai
# データベースユーザー名
DB_USER=root
# データベースパスワード
DB_PASSWORD=
# SQLiteファイルパス (DB_DRIVER=gormの場合)
DB_PATH=./data/etc_meisai.db

# =============================================================================
# gRPCサービス設定
# =============================================================================
# db_serviceのアドレス
GRPC_DB_SERVICE_ADDRESS=localhost:50051
# 接続タイムアウト
GRPC_TIMEOUT=30s
# 最大リトライ回数
GRPC_MAX_RETRIES=3
# TLS有効化
GRPC_ENABLE_TLS=false
# TLS証明書ファイル (TLS有効時)
GRPC_CERT_FILE=
# TLSキーファイル (TLS有効時)
GRPC_KEY_FILE=
# CA証明書ファイル (TLS有効時)
GRPC_CA_FILE=

# =============================================================================
# サーバー設定
# =============================================================================
# サーバーホスト
SERVER_HOST=0.0.0.0
# サーバーポート
SERVER_PORT=8080

# =============================================================================
# スクレイピング設定
# =============================================================================
# 最大ワーカー数
SCRAPING_MAX_WORKERS=5
# ヘッドレスブラウザモード
SCRAPING_HEADLESS=true

# =============================================================================
# インポート設定
# =============================================================================
# バッチサイズ
IMPORT_BATCH_SIZE=1000
# 一時ディレクトリ
IMPORT_TEMP_DIR=./temp

# =============================================================================
# ログ設定
# =============================================================================
# ログレベル (debug, info, warn, error, fatal)
LOG_LEVEL=info
# ログ出力パス
LOG_PATH=./logs
# JSON形式出力
LOG_JSON=true

# =============================================================================
# ETCアカウント設定
# =============================================================================
# 法人アカウント（カンマ区切り）
ETC_CORPORATE_ACCOUNTS=
# 個人アカウント（カンマ区切り）
ETC_PERSONAL_ACCOUNTS=
